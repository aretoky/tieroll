      = render 'staff/product_form', common: f
      
      .product_form.required
        = f.label "写真1"
        = f.file_field :cuff_link_one
        = image_tag @item.cuff_link_one
      
      .product_form
        = f.label "写真2"
        = f.file_field :cuff_link_two
        = image_tag @item.cuff_link_two
      
      .product_form
        = f.label "写真3"
