        = image_tag @item.cuff_link_four
      
      .product_form
        = f.label "写真5"
        = f.file_field :cuff_link_five
        = image_tag @item.cuff_link_five
      
      .product_form
        = f.label "写真6"
        = f.file_field :cuff_link_six
        = image_tag @item.cuff_link_six
      
      .product_form
        = f.label "写真7"
